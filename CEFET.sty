% Capa
\renewcommand{\maketitle}{
    \begin{titlepage}
        \center
        \fontsize{14pt}{14pt}\selectfont
        \MakeUppercase{\@institution} \\
        \vspace*{\baselineskip}
        \vspace*{1cm}
        
        \@author
        \vfill
        \begin{center}
            \bfseries
            \MakeUppercase{\@title} \\
            \@subtitle
        \end{center}
        \vfill
        \@location \\
        \@date
        \vspace*{1cm}
    \end{titlepage}
}

% folha de rosto
\newcommand{\makecover}{
    \begin{titlepage}
        \centering
        \fontsize{14pt}{14pt}\selectfont
        \MakeUppercase{\@author}
        \vspace*{\fill}
        \begin{center}
            \bfseries
            \MakeUppercase{\@title} \\
            \@subtitle
        \end{center}
        \vspace{\fill}
        \mdseries
        \noindent\hfill\begin{minipage}{.5\textwidth}
            \@preamble \\ \\
            \@advisor \\
            \@coadvisor
        \end{minipage}
        \vspace*{\fill} \\
        
        \@location \\
        \@date
        \vspace*{1cm}
    \end{titlepage}
}

% Folha de Aprovação
\newcommand{\makeapproval}{
    \noindent
    \begin{titlepage}
        \centering
        \fontsize{14pt}{14pt}\selectfont
        \@author
        \vspace*{\fill}
        \begin{center}
            \bfseries
            \MakeUppercase{\@title} \\
            \@subtitle
        \end{center}
        \vspace{\baselineskip}
        \mdseries
